<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>ALL USERS</title>
        <style>
            table, th,td{
                border: 1px solid black;
            }
        </style>
    </head>
    <body>
        <table>
            <tr>
                <th>ID</th>
                <th>USERNAME</th>
                <th>EMAIL</th>
            </tr>
            
            <% for(user of result){ %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td>
                        <form method="GET" action="/user/<%= user.id %>/edit">
                            <button>
                                EDIT
                            </button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </table>
    </body>
</html>

